<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Fragement_activity_classes.Event_profile_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <com.github.florent37.shapeofview.shapes.CircleView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            app:shape_circle_borderColor="@color/colorPrimaryDark"
            app:shape_circle_borderWidth="2dp">

            <!-- YOUR CONTENT -->

            <ImageView
                android:id="@+id/user_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_black_24dp"/>

        </com.github.florent37.shapeofview.shapes.CircleView>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="18sp"
            android:textAlignment="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.github.florent37.shapeofview.shapes.CircleView
            android:id="@+id/shape_my_event"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="13dp"
            android:elevation="4dp"
            app:shape_circle_borderColor="@color/colorPrimaryDark"
            app:shape_circle_borderWidth="2dp">

            <!-- YOUR CONTENT -->

            <ImageView
                android:id="@+id/shape_my_event_child"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/ic_event_note_black_24dp"/>

        </com.github.florent37.shapeofview.shapes.CircleView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Event"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/shape_my_event"/>

        <com.github.florent37.shapeofview.shapes.CircleView
            android:id="@+id/shape_create_event"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            app:shape_circle_borderColor="@color/colorPrimaryDark"
            app:shape_circle_borderWidth="2dp">

            <!-- YOUR CONTENT -->

            <ImageView
                android:id="@+id/shape_create_event_child"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_event_available_black_24dp"
                android:padding="5dp"/>

        </com.github.florent37.shapeofview.shapes.CircleView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Event"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/shape_my_event"/>



    </RelativeLayout>

</LinearLayout>