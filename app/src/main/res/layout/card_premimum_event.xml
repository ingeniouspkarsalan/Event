<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ev_banner_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/t1"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/feature_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:background="@drawable/featured" />

            <ImageView
                android:id="@+id/for_blur"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/formenu"
                android:layout_alignParentBottom="true"/>


            <TextView
                android:id="@+id/ev_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/for_blur"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:fontFamily="sans-serif-light"
                android:text="Carnival Fastival"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/ev_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ev_title"
                android:fontFamily="sans-serif-light"
                android:layout_marginStart="5dp"
                android:text="Business Meetup"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:paddingStart="10dp"
                android:paddingBottom="3dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:background="@drawable/category_style"/>

            <TextView
                android:id="@+id/ev_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ev_category"
                android:fontFamily="sans-serif-light"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:text="DHA Phase 7 "
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/ev_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ev_category"
                android:layout_alignParentStart="true"
                android:layout_marginStart="125dp"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:fontFamily="sans-serif-light"
                android:text="01-11-2018"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/ev_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:lines="2"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="2dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>